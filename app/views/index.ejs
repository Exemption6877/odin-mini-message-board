<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Message Board</title>
  </head>
  <body>
    <h1>The Message Board</h1>
    <% messages.forEach((message, index) => { %>
    <div class="message id-<%=index %>">
      <div class="message-top">
        <h3><%= message.user %></h3>
        <h3><%= message.added %></h3>
      </div>
      <p><%= message.text %></p>
    </div>
    <% }) %>
  </body>
</html>
